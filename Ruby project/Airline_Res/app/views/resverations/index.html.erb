<h1>Resverations</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Seat request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resverations.each do |resveration| %>
      <tr>
        <td><%= resveration.First_Name %></td>
        <td><%= resveration.Last_Name %></td>
        <td><%= resveration.Date_Of_Birth %></td>
        <td><%= resveration.Seat_Request %></td>
        <td><%= link_to 'Show', resveration %></td>
        <td><%= link_to 'Edit', edit_resveration_path(resveration) %></td>
        <td><%= link_to 'Destroy', resveration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

